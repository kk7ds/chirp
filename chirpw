from chirp import platform

# Hack to setup environment
platform.get_platform()

import gtk
import sys

from chirpui import mainapp

if hasattr(sys, "frozen"):
    log = file("debug.log", "w", 0)
    sys.stderr = log
    sys.stdout = log
    print "Log initialized"

a = mainapp.ChirpMain()

for i in sys.argv[1:]:
    print "Opening %s" % i
    a.do_open(i)

a.show()
gtk.main()
